<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/str_heading"
        android:id="@+id/textView_heading"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/str_dob"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/spinner_day"
        android:layout_toLeftOf="@+id/spinner_day"
        android:layout_toStartOf="@+id/spinner_day" />

    <Spinner
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/spinner_day"
        android:layout_below="@+id/textView_heading"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/spinner_month"
        android:layout_below="@+id/textView_heading"
        android:layout_toRightOf="@+id/spinner_day"
        android:layout_toEndOf="@+id/spinner_day"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <Spinner
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:id="@+id/spinner_year"
        android:layout_alignTop="@+id/spinner_month"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
